            .col-md-12
                .container.mainblock-content.kernels-bg.dark
                    .row
                        .col-md-12
                            h1.text-center.h1-kernels System architecture
                    .row
                        .col-md-6.kernels-column
                            a.kernels-button(href='/kernels/x86', tabindex='-1')
                                | x86
                        .col-md-6.kernels-column
                            a.kernels-button(href='/kernels/x64', tabindex='-1')
